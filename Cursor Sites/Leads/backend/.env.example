# Database
DATABASE_URL="file:./dev.db"

# Server
PORT=3002

# API Banking Françaises
# Activer les vraies API bancaires (true/false)
ENABLE_REAL_BANKING_APIS=false

# Tink API (Open Banking)
# Obtenir une clé sur https://developers.tink.com/
TINK_API_KEY=your_tink_api_key_here

# Bridge API (Vérification IBAN, Scoring)
# Obtenir une clé sur https://bridgeapi.io/
BRIDGE_API_KEY=your_bridge_api_key_here

# OpenCredits API (Simulation de prêts)
# Obtenir une clé auprès du fournisseur
OPEN_CREDITS_API_KEY=your_opencrédits_api_key_here

# Email Configuration (pour envoyer les emails au courtier)
# Email du courtier (destinataire)
COURTIER_EMAIL=courtier972@gmail.com

# Option 1: Resend (Recommandé - gratuit jusqu'à 3000 emails/mois)
# Obtenir une clé API sur https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=noreply@votredomaine.com

# Option 2: Configuration SMTP (Gmail, etc.)
# Si non configuré, les emails seront seulement loggés dans la console
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
